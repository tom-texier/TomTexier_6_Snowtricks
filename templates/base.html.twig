<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Accueil{% endblock %} - Snowtricks</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="/assets/css/snowtricks.css">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://kit.fontawesome.com/3a2ff5b0e9.js" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        {% include "_partials/header.html.twig" %}

        {% include "_partials/flashes.html.twig" %}

        {% block body %}{% endblock %}

        {% include "_partials/footer.html.twig" %}

        <script src="/assets/js/snowtricks.js"></script>
    </body>
</html>
