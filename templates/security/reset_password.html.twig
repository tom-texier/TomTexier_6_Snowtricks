{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <div class="forgotten_password_form">
            <h1>
                Réinitialisation du<br>
                mot de passe
            </h1>

            {{ form_start(form) }}
                {{ form_row(form.username) }}
                {{ form_row(form.password) }}

                <button type="submit" class="btn">Réinitialiser mon mot de passe</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}